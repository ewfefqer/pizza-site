        <div class="grid">

            <!-- автоматически генерируем 20 карточек -->
            <!-- Я использую массив с данными -->
            <script>
                const pizzas = [
                    ["Маргарита", 450], ["Пепперони", 520], ["4 сыра", 580], ["Гавайская", 500],
                    ["Мясная", 620], ["Диабло", 600], ["Барбекю", 650], ["С грибами", 470],
                    ["Вегетарианская", 490], ["Трюфельная", 780], ["С беконом", 590],
                    ["Охотничья", 640], ["Цыпленок ранч", 610], ["Стейк-пицца", 750],
                    ["Неаполитанская", 560], ["С салями", 530], ["Филадельфия-пицца", 700],
                    ["Карбонара", 680], ["Острая Мексиканская", 610], ["С морепродуктами", 820]
                ];

                document.write(pizzas.map(p =>
                `
                <div class="card fade-up">
                    <img src="https://source.unsplash.com/400x300/?pizza,${p[0]}">
                    <div class="card-body">
                        <h3>${p[0]}</h3>
                        <strong>${p[1]} ₽</strong><br><br>
                        <button class="btn" onclick="addToCart('${p[0]}', ${p[1]})">
                            В корзину
                        </button>
                    </div>
                </div>
                `
                ).join(""));
            </script>

        </div>
    </div>
